<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray2"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    >
    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edt_contact"
        android:singleLine="true"
        android:hint="Name"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="13sp"
        android:drawableRight="@drawable/user_icon"
        />
    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edt_contact"
        android:singleLine="true"
        android:hint="Email"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="13sp"
        android:drawableRight="@drawable/email_icon"

        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >
        <com.lamudi.phonefield.PhoneInputLayout
            android:id="@+id/edt_check_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

        </com.lamudi.phonefield.PhoneInputLayout>

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edt_contact"
            android:singleLine="true"
            android:hint="@string/phone"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="13sp"
            android:drawableRight="@drawable/phone_icon"

            />
    </FrameLayout>

    <EditText
        android:id="@+id/edt_subject"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edt_contact"
        android:singleLine="true"
        android:hint="Subject"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="13sp"
        android:drawableRight="@drawable/edit_icon"

        />

    <EditText
        android:id="@+id/edt_message"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edt_contact"
        android:singleLine="true"
        android:hint="Message"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="13sp"
        android:gravity="top"
        android:paddingTop="8dp"
        />

    <Button
        android:id="@+id/send_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_contact"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:text="Send"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:id="@+id/ll_whatsapp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="5dp"
            >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/whatsapp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:text="مراسلة خلال الواتس اب"
                android:gravity="center"
                android:inputType="textMultiLine"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_gmail"

            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/gmail"
                android:padding="4dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:text="مراسلة خلال الايميل"
                android:gravity="center"
                android:inputType="textMultiLine"

                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>